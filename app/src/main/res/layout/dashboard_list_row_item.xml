<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#010527"
        android:columnCount="4"
        android:rowCount="5"
        >

        <ImageView android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_flight_takeoff_black_24dp"
            android:layout_rowSpan="3"
            android:layout_row="0"
            android:layout_column="0"/>
        <TextView android:id="@+id/tvFlightNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NA"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#26DCA8"
            android:layout_row="3"
            android:layout_column="0"/>
        <TextView android:id="@+id/tvTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#B9D4E8"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_row="0"/>
        <TextView android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_column="2"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#B9D4E8"
            android:layout_column="1"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_row="1"/>
        <TextView android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_column="2"
            android:layout_row="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#B9D4E8"
            android:layout_column="1"
            android:layout_marginEnd="10dp"
            android:layout_row="2"/>
        <TextView android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_column="2"
            android:layout_row="2"/>

        <FrameLayout android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_gravity="center"
            android:background="@drawable/background_availability">
            <TextView
                android:id="@+id/tvAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9D0909"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="Available"/>
        </FrameLayout>

        <Button android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:background= "#346BD7"
            android:text="Book Now"
            android:padding="1dp"/>
    </GridLayout>

</androidx.cardview.widget.CardView>